# YouTube Thumbnail Generator - Environment Variables

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Output Settings
OUTPUT_WIDTH=1280
OUTPUT_HEIGHT=720
OUTPUT_QUALITY=95

# Face Detection
FACE_DETECTION_MODEL=buffalo_s
FACE_CONFIDENCE_THRESHOLD=0.5
MIN_FACE_SIZE=80

# Clustering
CLUSTERING_ALGORITHM=DBSCAN
DBSCAN_EPS=0.4
DBSCAN_MIN_SAMPLES=2

# Text Settings
TITLE_FONT_SIZE=72
SUBTITLE_FONT_SIZE=36
TEXT_STROKE_WIDTH=8

# Font Files (in assets/fonts/)
FONT_TITLE=Kanit-Bold.ttf
FONT_SUBTITLE=Kanit-Regular.ttf
